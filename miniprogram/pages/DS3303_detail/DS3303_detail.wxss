.detail-page {
  background-color: #f5f5f5;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  padding-bottom: 20px;
}

/* 实验室图片区域 */
.lab-image-container {
  height: 200px;
  background-color: #e0e0e0;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}

.lab-image-container image {
  width: 100%;
  height: 100%;
}

.image-placeholder {
  color: #999;
  font-size: 16px;
}

/* 教师信息区块 */
.teacher-section {
  display: flex;
  background-color: white;
  margin: 15px;
  border-radius: 8px;
  overflow: hidden;
  box-shadow: 0 2px 6px rgba(0,0,0,0.1);
}

.teacher-photo {
  width: 100px;
  height: 120px;
  background-color: #eee;
  display: flex;
  justify-content: center;
  align-items: center;
}

.teacher-photo image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.photo-placeholder {
  color: #999;
  font-size: 14px;
}

.teacher-info {
  flex: 1;
  padding: 15px;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.info-row {
  margin-bottom: 10px;
  display: flex;
  align-items: center;
}

.info-label {
  font-size: 15px;
  color: #666;
  width: 60px;
}

.info-content {
  font-size: 15px;
  color: #333;
  font-weight: 500;
}

/* 实验室详情区块 */
.lab-detail-section {
  background-color: white;
  margin: 0 15px 15px;
  border-radius: 8px;
  padding: 15px;
  box-shadow: 0 2px 6px rgba(0,0,0,0.1);
}

.section-title {
  font-size: 16px;
  font-weight: bold;
  color: #007aff;
  margin-bottom: 10px;
  padding-bottom: 8px;
  border-bottom: 1px solid #eee;
}

.detail-content {
  font-size: 14px;
  color: #333;
  line-height: 1.6;
}

.detail-content text {
  display: block;
  margin-bottom: 8px;
}

/* 按钮区域 */
.button-area {
  padding: 0 15px;
}

.button-area button {
  background-color: #007aff;
  color: white;
  border-radius: 20px;
  width: 100%;
}