/* 页面基础样式 */
.lab-page {
  background-color: #f5f5f5;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.lab-number-block {
  background-color: #007aff;
  color: white;
  text-align: center;
  padding: 12px 0;
  font-size: 18px;
  font-weight: bold;
}

/* 修改后的视频网格 */
.monitor-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 0;
  background-color: #000;
  border: 1px solid #fff;
  box-sizing: border-box;
  margin: 10px;
}

.monitor-cell {
  position: relative;
  aspect-ratio: 1.5/1;
  overflow: hidden;
  border: 1px solid #fff;
  box-sizing: border-box;
  margin: -1px 0 0 -1px;
}

.video {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.no-video {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #aaa;
  font-size: 14px;
}

/* 信息容器 */
.info-container {
  display: flex;
  background-color: white;
  margin: 10px;
  border-radius: 8px;
  overflow: hidden;
  box-shadow: 0 2px 6px rgba(0,0,0,0.1);
}

.teacher-photo {
  width: 100px;
  height: 120px;
  background-color: #eee;
  display: flex;
  justify-content: center;
  align-items: center;
}

.teacher-photo image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.photo-placeholder {
  color: #999;
  font-size: 14px;
}

.teacher-info {
  flex: 1;
  padding: 15px;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.info-item {
  margin-bottom: 10px;
  display: flex;
  align-items: center;
}

.info-label {
  font-size: 14px;
  color: #666;
  width: 60px;
}

.info-value {
  font-size: 15px;
  color: #333;
  font-weight: 500;
}

.button-area {
  display: flex;
  justify-content: space-around;
  padding: 15px;
  background-color: white;
  margin-top: auto;
}

.button-area button {
  background-color: #007aff;
  color: white;
  border-radius: 20px;
  width: 45%;
  font-size: 14px;
  padding: 8px 0;
}