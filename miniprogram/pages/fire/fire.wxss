/* 容器样式 */
.container {
  padding: 20px;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 图片展示区域样式 */
.video-wrapper {
  margin-bottom: 20px;
  border: 1px solid #ccc;
  border-radius: 5px;
  overflow: hidden;
}

.video {
  width: 100%;
  height: auto;
}

.no-video {
  width: 100%;
  height: 100%;
  background-color: #ccc;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 18px;
}

/* 控制区域样式 */
.control-section {
  display: flex;
  flex-direction: column;
  margin-bottom: 20px;
}

.threshold-adjust,
.camera-control,
.detection-control {
  background-color: #fff;
  padding: 15px;
  border: 1px solid #ccc;
  border-radius: 5px;
  width: 100%;
  margin-bottom: 10px;
}

.threshold-adjust text,
.camera-control text,
.detection-control text {
  display: block;
  margin-bottom: 10px;
}

.slider {
  margin-bottom: 10px;
}

button {
  background-color: #007aff;
  color: #fff;
  border: none;
  border-radius: 5px;
  padding: 10px;
  width: 100%;
  cursor: pointer;
}

button[disabled] {
  background-color: #ccc;
  cursor: not-allowed;
}

/* 信息展示区域样式 */
.info-section {
  display: flex;
  justify-content: space-between;
}

.info-box {
  width: 30%;
  padding: 15px;
  border-radius: 5px;
  text-align: center;
}

.threshold-box {
  background-color: #e0f7fa;
  border: 1px solid #00acc1;
}

.confidence-box {
  background-color: #fff3e0;
  border: 1px solid #fb8c00;
}

.alarm-box {
  background-color: #ffebee;
  border: 1px solid #e53935;
}

.value-box {
  background-color: #fff;
  border: 1px solid #ccc;
  margin-top: 10px;
  padding: 5px;
}    