/* 页面整体样式 */
.monitor-page {
  background-color: #f9f9f9;
  min-height: 100vh;
  padding: 20px;
  box-sizing: border-box;
}

/* 头部标题样式 */
.monitor-header {
  background-color: #007aff;
  padding: 15px;
  border-radius: 10px;
  margin-bottom: 20px;
  text-align: center;
}

.header-title {
  color: white;
  font-size: 24px;
  font-weight: bold;
}

/* 主体内容布局 */
.main-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 校徽图片样式 */
.header-image {
  width: 120px;
  height: 120px;
  object-fit: contain; /* 保持比例不拉伸 */
  margin: 20px 0;
  border-radius: 8px;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
}

/* 实验室列表样式 */
.lab-list {
  width: 100%;
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 15px;
  margin-top: 20px;
}

.lab-item {
  background-color: white;
  border-radius: 10px;
  padding: 15px;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.lab-icon-circle {
  width: 60px;
  height: 60px;
  background-color: #f0f7ff;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 10px;
}

.lab-icon {
  width: 40px;
  height: 40px;
}

.lab-name {
  font-size: 16px;
  color: #333;
  font-weight: 500;
}
    