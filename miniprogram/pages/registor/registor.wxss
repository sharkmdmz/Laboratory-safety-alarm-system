/* 基础样式 */
page {
  margin: 0;
  padding: 0;
  line-height: 1;
}

/* 顶部标题背景 */
.top-title {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 200rpx;
  background: linear-gradient(45deg, #727CFB, #46D0ED);
  z-index: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 容器设置 */
.container {
  position: relative;
  padding-top: 200rpx; /* 等于顶部背景高度 */
}

/* 输入框区域 */
.input-box {
  width: 100%;
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 40rpx;
  box-sizing: border-box;
  margin-top: -30rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
}

.cu-form-group {
  width: 100%;
  margin-bottom: 30rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

/* 按钮区域 */
.btn-area {
  width: 100%;
  padding: 40rpx;
  box-sizing: border-box;
}

.login-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background-image: linear-gradient(45deg, #727CFB, #46D0ED);
  color: #ffffff;
  border-radius: 45rpx;
  font-size: 32rpx;
  margin-bottom: 30rpx;
  padding-top: 2px;
}

/* 文本样式 */
.text-white {
  color: #ffffff;
}

.text-bold {
  font-weight: bold;
}

.text-xxxl {
  font-size: 40rpx;
}

.margin-top {
  margin-top: 20rpx;
}
  