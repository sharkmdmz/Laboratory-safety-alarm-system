/* 页面容器 */
.page-container {
  width: 100%;
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 顶部图片区域 - 保持固定高度 */
.lab-image-container {
  height: 400rpx;
  background-color: #e0e0e0;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}

.lab-image-container image {
  width: 100%;
  height: 100%;
}

.image-placeholder {
  color: #999;
  font-size: 32rpx;
}

/* 信息框区域 */
.info-boxes {
  padding: 20rpx;
}

/* 信息框样式 */
.info-box {
  width: 100%;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  padding: 10rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box; 
  height: 80rpx; 
}

.box-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
  object-fit: contain; /* 保证图片不变形 */
}

.box-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  padding-left: 15rpx;
}

.box-status {
  font-size: 40rpx;
  color: rgb(26, 148, 77);
  text-align: right; 
  line-height: 60rpx; 
  width: 100%; 
}    