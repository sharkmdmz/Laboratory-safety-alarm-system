.container-this {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  height: 100vh;
  background-color: #f4f4f4;  /* 添加背景色 */
  padding: 50rpx 0;
  gap: 25rpx;
  box-sizing: border-box;
}

.header {
  background-color: #07c160;  /* 头部背景色 */
  color: white;  /* 头部文字颜色 */
  text-align: center;
  padding: 20rpx;
}

.header-title {
  font-size: 36rpx;  /* 头部文字大小 */
  font-weight: bold;  /* 加粗 */
}

.weui-cell {
  background-color: white;  /* 默认背景色 */
  border-radius: 10rpx;  /* 圆角 */
  box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.1);  /* 阴影效果 */
  padding: 20rpx;
}

/* 警报状态样式 */
.weui-cell.alert-active {
  background-color: #ffebee;  /* 淡红色背景 */
  border-left: 8rpx solid #f44336;  /* 左侧红色边框作为警示 */
}

.weui-icon{
  height:60rpx;
  width:60rpx;
  margin-right:20rpx;
}

.footer {
  background-color: #f4f4f4;  /* 底部背景色 */
  text-align: center;
  padding: 20rpx;
}

.footer-text {
  color: #666;  /* 底部文字颜色 */
  font-size: 24rpx;  /* 底部文字大小 */
}