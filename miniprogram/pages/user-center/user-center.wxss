/* user-center.wxss */
.user-center {
  width: 100%;
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 40rpx;
  box-sizing: border-box;
}

/* 用户信息区域 */
.user-info-container {
  width: 100%;
  height: 300rpx;
  background-color: #ffffff;
  display: flex;
  align-items: center;
  padding: 0 40rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.avatar-container {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  position: relative;
}

.avatar {
  width: 100%;
  height: 100%;
}

.avatar-placeholder {
  font-size: 28rpx;
  color: #999;
}

.username {
  margin-left: 40rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 功能列表 */
.function-list {
  width: 100%;
  background-color: #fff;
}

.function-item {
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #f0f0f0;
}

.item-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 0rpx;
}

.item-name {
  flex: 2;
  font-size: 32rpx;
  color: #333;
}

.item-arrow {
  width: 40rpx;
  height: 40rpx;
}