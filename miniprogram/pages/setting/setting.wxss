/* setting.wxss */
.setting-container {
  width: 100%;
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 顶部图片区域 - 保持固定高度 */
.lab-image-container {
  height: 400rpx; /* 保持400rpx高度不变 */
  background-color: #e0e0e0;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}

.lab-image-container image {
  width: 100%;
  height: 100%;
}

.image-placeholder {
  color: #999;
  font-size: 32rpx;
}

/* 设置表单区域 */
.setting-form {
  padding: 40rpx 30rpx;
}

.weui-cells {
  margin-top: 0;
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

/* 阈值调节控件样式 */
.threshold-cell {
  padding: 20rpx 30rpx;
}

.threshold-control {
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.threshold-value {
  min-width: 80rpx;
  text-align: center;
  font-size: 32rpx;
  color: #333;
  margin: 0 20rpx;
}

.threshold-buttons {
  display: flex;
  flex-direction: column;
}

.threshold-btn {
  width: 60rpx;
  height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f0f0f0;
  color: #333;
  font-size: 32rpx;
  font-weight: bold;
}

.threshold-btn:first-child {
  border-top-left-radius: 8rpx;
  border-top-right-radius: 8rpx;
  margin-bottom: 2rpx;
}

.threshold-btn:last-child {
  border-bottom-left-radius: 8rpx;
  border-bottom-right-radius: 8rpx;
}

.threshold-btn:active {
  background-color: #e0e0e0;
}

.weui-btn-area {
  margin-top: 60rpx;
}

.weui-btn_primary {
  background-color: #007aff;
  border-radius: 8rpx;
  font-size: 34rpx;
}

.IP-end{
  height:100rpx;
}