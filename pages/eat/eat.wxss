.container {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  height: 100vh;
  background-color: #f4f4f4;
  padding: 50rpx;
  box-sizing: border-box;
}

.video-container {
  width: 100%;
  height: 60%;
  margin-bottom: 50rpx;
}

video {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

button {
  width: 200rpx;
  height: 100rpx;
  background-color: #1aad19;
  color: white;
  border: none;
  border-radius: 10rpx;
  font-size: 30rpx;
}