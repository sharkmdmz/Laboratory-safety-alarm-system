.container-this {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  height: 100vh;
  background-color: #f4f4f4; /* 背景色 */
  padding: 200rpx 0;
  gap: 25rpx;
  box-sizing: border-box;
}

.icon {
  width: 80rpx;
  height: 80rpx;
}

.st {
  justify-content: space-between;
  align-items: center;
  gap: 25rpx;
  border-bottom: solid 4rpx #000000;
  box-shadow: 0 3rpx 0 3rpx #00000010;
  height: 100rpx;
}
.fs {
  justify-content: flex-start;
  gap: 25rpx;
  align-items: center;
}

.message {
  color: #636363;
  margin-right: 50rpx;
  /* margin-left: 300rpx; */
}
