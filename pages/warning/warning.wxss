.container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  background-color: #f4f4f4; /* 背景色 */
}

.login-form {
  width: 80%;
  max-width: 400px;
  padding: 20px;
  border-radius: 10px;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  background-color: white; /* 表单背景 */
}

.title {
  font-size: 24px;
  font-weight: bold;
  text-align: center;
  margin-bottom: 20px;
  color: #333; /* 标题颜色 */
}

.input-field {
  width: 90%;
  padding: 12px;
  margin: 10px 0;
  border: 1px solid #ccc;
  border-radius: 5px;
  font-size: 16px;
}

.input-field:focus {
  border-color: #007aff; /* 聚焦时边框颜色 */
  outline: none; /* 去掉默认outline */
}

.login-button {
  width: 100%;
  padding: 12px;
  background-color: #007aff; /* 按钮背景颜色 */
  color: white;
  border: none;
  border-radius: 5px;
  font-size: 18px;
  cursor: pointer; /* 鼠标悬停时呈现手形 */
}

.login-button:hover {
  background-color: #005bb5; /* 悬停效果 */
}

.register-link {
  text-align: center;
  margin-top: 15px;
  color: #007aff; /* 注册链接颜色 */
  cursor: pointer; /* 鼠标悬停时呈现手形 */
  text-decoration: underline; /* 下划线效果 */
}
