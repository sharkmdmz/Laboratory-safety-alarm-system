/* 整体容器样式 */
.container {
  padding: 20px;
  text-align: center;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 头部样式 */
.header {
  margin-bottom: 20px;
}

.title {
  font-size: 24px;
  font-weight: bold;
  color: #007aff;
}

/* 图片容器样式 */
.image-container {
  background-color: white;
  padding: 10px;
  border-radius: 10px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  margin-bottom: 20px;
}

.image-preview {
  width: 1000%;
  height: auto;
  border-radius: 40px;
}

/* 按钮容器样式 */
.button-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.save-button,
.view-button {
  width: 80%;
  margin-bottom: 10px;
  background-color: #007aff;
  color: white;
  padding: 15px 20px;
  border-radius: 25px;
  font-size: 18px;
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
}

.view-button {
  background-color: #28a745;
}