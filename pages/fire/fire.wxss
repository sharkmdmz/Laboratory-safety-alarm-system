.container {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  height: 100vh;
  background-color: #f4f4f4;
  padding: 50rpx 40rpx;
  box-sizing: border-box;
}

.video-container {
  width: 100%;
  height: 60%;
  margin-bottom: 50rpx;
}

video {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

